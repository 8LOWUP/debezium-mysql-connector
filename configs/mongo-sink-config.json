{
  "name": "mongo-sink",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSinkConnector",
    "topics": "mysql-cdc.mcpdb.user_mcp",
    "connection.uri": "mongodb+srv://workspace_db:kakao_workspace_mongo123@workspace-mongo-cluster.7fbnadz.mongodb.net/workspace?retryWrites=true&w=majority&appName=workspace-mongo-cluster",
    "database": "${MONGODB_DATABASE}",
    "collection": "userMcp",
    "deletes.enabled": "true",
    "post.processor.chain": "com.mongodb.kafka.connect.sink.processor.DocumentIdAdder,com.mongodb.kafka.connect.sink.processor.BlockListValueProjector",
    "document.id.strategy": "com.mongodb.kafka.connect.sink.processor.id.strategy.PartialValueStrategy",
    "document.id.strategy.partial.value.projection.type": "AllowList",
    "document.id.strategy.partial.value.projection.list": "userId,mcpId",
    "transforms": "cast,rename,only,addField",
    "transforms.cast.type": "org.apache.kafka.connect.transforms.Cast$Value",
    "transforms.cast.spec": "user_id:string,mcp_id:string,platform_id:string",
    "transforms.rename.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.rename.renames": "user_id:userId,mcp_id:mcpId,platform_id:platformId",
    "transforms.only.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.only.whitelist": "userId,mcpId,platformId,__deleted,op",
    "transforms.addField.type": "org.apache.kafka.connect.transforms.InsertField$Value",
    "transforms.addField.static.field": "mcpToken",
    "transforms.addField.static.value": "",
    "value.projection.type": "BlockList",
    "value.projection.list": "userId,mcpId",
    "writemodel.strategy": "com.mongodb.kafka.connect.sink.writemodel.strategy.ReplaceOneDefaultStrategy",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true"
  }
}