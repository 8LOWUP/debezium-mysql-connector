{
  "name": "my-mysql-cdc-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "tasks.max": "1",

    "database.hostname": "${MYSQL_HOST}",
    "database.port": "${MYSQL_INNER_PORT}",
    "database.user": "${MYSQL_USER}",
    "database.password": "${MYSQL_PASSWORD}",

    "database.server.id": "184054",
    "topic.prefix": "mysql-cdc",

    "database.include.list": "${MYSQL_DATABASE}",
    "table.include.list": "${MYSQL_DATABASE}.user_mcp",

    "schema.history.internal.kafka.bootstrap.servers": "${KAFKA_BOOTSTRAP_SERVERS}",
    "schema.history.internal.kafka.topic": "schema-history-db-events",

    "transforms": "unwrap,dropUpdates",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.add.fields": "op",
    "transforms.unwrap.drop.tombstones": "true",
    "transforms.unwrap.delete.handling.mode": "rewrite",

    "transforms.dropUpdates.type": "io.debezium.transforms.Filter",
    "transforms.dropUpdates.language": "juel",
    "transforms.dropUpdates.condition": "value.op == 'u'",

    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true"
  }
}